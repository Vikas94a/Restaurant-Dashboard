rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'restaurants' collection
    match /restaurants/{restaurantId} {
      // Allow any authenticated user to read restaurant data
      allow read: if true;

      // Allow any authenticated user to write (create/update/delete) restaurant data
      allow write: if true;

      // Nested rules for the 'menu' subcollection under each restaurant
      match /menu/{menuId} {
        allow read, write: if true; // <-- TEMP: allow anyone
        // In production: replace with auth check
        // allow read, write: if request.auth != null;
      }
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
