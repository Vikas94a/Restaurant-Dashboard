rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'restaurants' collection
    match /restaurants/{restaurantId} {
      // Allow any authenticated user to read restaurant data
      allow read: if true;
      
      // Allow any authenticated user to create new restaurants
      // You might want to restrict this further, e.g., to specific roles
      allow create: if true;
      
      // Placeholder for update and delete: Restrict to owners or specific conditions
      // allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Allow any authenticated user to write to the restaurant
      allow write: if true;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read and write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 